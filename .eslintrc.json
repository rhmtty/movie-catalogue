{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "import/no-extraneous-dependencies": [
            "error", { "devDependencies": true }
        ],
        "no-console": 0,
        "quotes": ["error", "single"],
        "linebreak-style": 0,
        "no-unused-vars": "off",
        "eol-last": "off",
        "no-underscore-dangle": "off",
        "no-restricted-globals": "off",
        "max-len": 0
    }
}
